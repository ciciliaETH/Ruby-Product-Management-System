<!-- Page Header -->
<div class="flex justify-between items-center mb-8">
    <div>
        <h1 class="text-3xl font-bold text-gray-900 flex items-center">
            <i class="fas fa-box mr-3 text-primary-600"></i>
            Manajemen Produk
        </h1>
        <p class="text-gray-600 mt-2">Kelola inventori produk Anda dengan mudah</p>
    </div>
    <a href="/products/new" class="bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors flex items-center space-x-2 shadow-lg">
        <i class="fas fa-plus"></i>
        <span>Tambah Produk</span>
    </a>
</div>

<!-- Products Grid -->
<% if @products.empty? %>
    <div class="text-center py-16 bg-white rounded-xl shadow-lg">
        <i class="fas fa-box-open text-gray-300 text-6xl mb-4"></i>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Belum Ada Produk</h3>
        <p class="text-gray-600 mb-6">Mulai dengan menambahkan produk pertama Anda</p>
        <a href="/products/new" class="bg-primary-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-primary-700 transition-colors inline-flex items-center space-x-2">
            <i class="fas fa-plus"></i>
            <span>Tambah Produk Pertama</span>
        </a>
    </div>
<% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @products.each do |product| %>
            <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow border border-gray-100 overflow-hidden">
                <div class="p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div class="flex-1">
                            <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= product['name'] %></h3>
                            <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= product['description'] %></p>
                        </div>
                        <div class="flex space-x-2 ml-4">
                            <a href="/products/<%= product['id'] %>/edit" class="text-primary-600 hover:text-primary-700 p-2 rounded-lg hover:bg-primary-50 transition-colors">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button onclick="confirmDelete(<%= product['id'] %>, 'product')" class="text-red-600 hover:text-red-700 p-2 rounded-lg hover:bg-red-50 transition-colors">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="flex justify-between items-center mb-4">
                        <div class="text-2xl font-bold text-primary-600">
                            Rp <%= number_with_delimiter(product['price'].to_i) %>
                        </div>
                        <div class="flex items-center space-x-2">
                            <% if product['stock'] > 10 %>
                                <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-medium">
                                    <i class="fas fa-check-circle mr-1"></i>
                                    Tersedia
                                </span>
                            <% elsif product['stock'] > 0 %>
                                <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-xs font-medium">
                                    <i class="fas fa-exclamation-triangle mr-1"></i>
                                    Terbatas
                                </span>
                            <% else %>
                                <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-xs font-medium">
                                    <i class="fas fa-times-circle mr-1"></i>
                                    Habis
                                </span>
                            <% end %>
                        </div>
                    </div>
                    
                    <div class="flex justify-between items-center">
                        <div class="text-sm text-gray-600">
                            <i class="fas fa-cubes mr-1"></i>
                            Stok: <span class="font-medium"><%= product['stock'] %></span>
                        </div>
                        <div class="text-xs text-gray-500">
                            ID: #<%= product['id'] %>
                        </div>
                    </div>
                </div>
                
                <div class="bg-gray-50 px-6 py-3 border-t border-gray-100">
                    <div class="flex justify-between items-center text-xs text-gray-500">
                        <span>
                            <i class="fas fa-calendar mr-1"></i>
                            Dibuat: <%= Time.parse(product['created_at']).strftime('%d/%m/%Y') rescue 'N/A' %>
                        </span>
                        <% if product['updated_at'] %>
                            <span>
                                <i class="fas fa-edit mr-1"></i>
                                Diupdate: <%= Time.parse(product['updated_at']).strftime('%d/%m/%Y') rescue 'N/A' %>
                            </span>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

    <!-- Summary Stats -->
    <div class="mt-8 bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Ringkasan Inventori</h3>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="text-center p-4 bg-primary-50 rounded-lg">
                <div class="text-2xl font-bold text-primary-600"><%= @products.length %></div>
                <div class="text-sm text-gray-600">Total Produk</div>
            </div>
            <div class="text-center p-4 bg-green-50 rounded-lg">
                <div class="text-2xl font-bold text-green-600"><%= @products.count { |p| p['stock'] > 0 } %></div>
                <div class="text-sm text-gray-600">Tersedia</div>
            </div>
            <div class="text-center p-4 bg-red-50 rounded-lg">
                <div class="text-2xl font-bold text-red-600"><%= @products.count { |p| p['stock'] == 0 } %></div>
                <div class="text-sm text-gray-600">Habis</div>
            </div>
            <div class="text-center p-4 bg-gray-50 rounded-lg">
                <div class="text-2xl font-bold text-gray-600"><%= @products.sum { |p| p['stock'] } %></div>
                <div class="text-sm text-gray-600">Total Stok</div>
            </div>
        </div>
    </div>
<% end %>
