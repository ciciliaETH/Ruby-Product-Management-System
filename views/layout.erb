<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= @title || "Product Management System" %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#eff6ff',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                        }
                    }
                }
            }
        }
    </script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/" class="flex items-center space-x-2">
                        <i class="fas fa-store text-primary-600 text-xl md:text-2xl"></i>
                        <span class="text-lg md:text-xl font-bold text-gray-900 hidden sm:block">ProductManagement</span>
                        <span class="text-lg font-bold text-gray-900 sm:hidden">PM</span>
                    </a>
                </div>
                
                <!-- Mobile Menu Button -->
                <div class="flex items-center space-x-2 md:hidden">
                    <button id="mobile-menu-btn" class="p-2 rounded-md text-gray-700 hover:text-primary-600 hover:bg-gray-100 focus:outline-none">
                        <i class="fas fa-bars text-lg"></i>
                    </button>
                </div>
                
                <!-- Desktop Menu -->
                <div class="hidden md:flex items-center space-x-4">
                    <a href="/products" class="flex items-center space-x-1 px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-100 transition-colors">
                        <i class="fas fa-box"></i>
                        <span>Produk</span>
                    </a>
                    <a href="/purchases" class="flex items-center space-x-1 px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-100 transition-colors">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Pembelian</span>
                    </a>
                </div>
            </div>
            
            <!-- Mobile Menu -->
            <div id="mobile-menu" class="hidden md:hidden border-t border-gray-200 bg-white">
                <div class="px-2 pt-2 pb-3 space-y-1">
                    <a href="/products" class="flex items-center space-x-2 px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-100 transition-colors">
                        <i class="fas fa-box w-5"></i>
                        <span>Produk</span>
                    </a>
                    <a href="/purchases" class="flex items-center space-x-2 px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary-600 hover:bg-gray-100 transition-colors">
                        <i class="fas fa-shopping-cart w-5"></i>
                        <span>Pembelian</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto py-4 md:py-6 px-3 sm:px-4 md:px-6 lg:px-8">
        <% if @error %>
            <div class="mb-4 bg-red-50 border border-red-200 text-red-700 px-3 md:px-4 py-3 rounded-lg flex items-start space-x-2">
                <i class="fas fa-exclamation-circle mt-0.5 flex-shrink-0"></i>
                <span class="text-sm md:text-base"><%= @error %></span>
            </div>
        <% end %>

        <% if @success %>
            <div class="mb-4 bg-green-50 border border-green-200 text-green-700 px-3 md:px-4 py-3 rounded-lg flex items-start space-x-2">
                <i class="fas fa-check-circle mt-0.5 flex-shrink-0"></i>
                <span class="text-sm md:text-base"><%= @success %></span>
            </div>
        <% end %>

        <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto py-3 md:py-4 px-3 sm:px-4 md:px-6 lg:px-8">
            <p class="text-center text-gray-500 text-xs md:text-sm">
                Â© 2025 Product Management System. Built with Ruby & Supabase. by <a href="https://nofall.vercel.app" target="_blank" class="text-primary-600 hover:text-primary-700">NoFall</a>
            </p>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        document.getElementById('mobile-menu-btn').addEventListener('click', function() {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const mobileMenu = document.getElementById('mobile-menu');
            const mobileMenuBtn = document.getElementById('mobile-menu-btn');
            
            if (!mobileMenuBtn.contains(event.target) && !mobileMenu.contains(event.target)) {
                mobileMenu.classList.add('hidden');
            }
        });

        // Delete confirmation
        function confirmDelete(id, type) {
            if (confirm(`Apakah Anda yakin ingin menghapus ${type} ini?`)) {
                fetch(`/${type}s/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.error || 'Terjadi kesalahan');
                    }
                });
            }
        }

        // Cancel purchase
        function cancelPurchase(id) {
            if (confirm('Apakah Anda yakin ingin membatalkan pembelian ini?')) {
                fetch(`/purchases/${id}/cancel`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(data.error || 'Terjadi kesalahan');
                    }
                });
            }
        }
    </script>
</body>
</html>
